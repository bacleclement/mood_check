<div class="container">
    <div class="row">
      <div class="col-xs-12 col-xs-offset-1">
        <%= link_to(thought_check_path(thought_check.id)) do %>
        <div class="card big-card">
          <div class="card-left">
            <h2 class="master-title">Votre <b>pensée</b></h2>
            <p class="date"><%= thought_check.created_at.strftime("%b %d, %Y") %></p>
            <P class="title-trust">Niveau de confiance</p>
            <h2 class="content-trust"><%= thought_check.trust %></h2>
          </div>
          <div class="card-right">
            <div class="text">
              <h2 class="title"><b>Où ?</b></h2>
              <p><b>Situation :</b> <%= thought_check.situation %></p>
              <hr>
              <h2 class="title"><b>Quoi ?</b> </h2>
              <p> <b>À propos de </b>: <%= thought_check.about %></p>
              <p><b>Votre pensée :</b> <%= thought_check.thought %></p>
              <hr>
              <h2 class="title"><b>Emotion ?</b> </h2>
              <p><%= thought_check.emotion %></p>
              <p><b>Intensité de l'émotion :</b> <%= thought_check.emotion_level %></p>
              <hr>
              <h2 class="title"><b>Sensation ?</b></h2>
              <p><%= thought_check.physiological %></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
